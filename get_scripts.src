#!/bin/sh

## get scripts
git clone https://github.com/untoreh/scripts -b utils utils

## on linux build inside ct
if "$TRAVIS_OS_NAME" = linux; then
    docker run -d --name buildct -v $PWD/utils/buildscripts:/build -w /build alpine:latest /bin/sh -c "apk add bash git; sleep 9999999999"
    docker exec -it buildct /bin/sh -c "while ! type git; do sleep 1; done"
fi
